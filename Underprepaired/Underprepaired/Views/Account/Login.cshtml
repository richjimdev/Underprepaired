@model Underprepaired.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="about" class="projects-section text-center">
    <div class="container text-light">
            <h2>Login</h2>
            <form method="post">
                <div>
                    <div asp-validation-summary="All"></div>
                    <label class="d-block" asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div>
                    <label class="d-block mt-3" asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>

                <button class="btn btn-primary mt-3 mb-3" type="submit">Login!</button>
            </form>
            <a class="text-light" href="/account/register">Not registered yet? Click here to get started.</a>
    </div>
 </section>
