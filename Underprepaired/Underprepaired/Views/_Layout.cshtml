@using Microsoft.AspNetCore.Identity
@using Underprepaired.Models
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <nav class="navbar navbar-dark bg-dark">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand my-auto">UnderprePAIRed!</a>
            <div class="form-inline my-2 my-lg-0">
                <p class="text-light my-auto">
                    Logged In As: @User.Claims.First(name => name.Type == "FullName").Value
                </p>
                    @await Component.InvokeAsync("CartPreview", @SignInManager.UserManager.GetUserName(User))
                <a class="nav-item nav-link text-light" href="/products">Shop</a>
                <form asp-action="Logout" asp-controller="Account" method="post">
                    <button class="btn btn-link text-light" type="submit">Logout</button>
                </form>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-dark bg-dark text-light">
            <p class="navbar-brand my-auto">UnderprePAIRed!</p>
            <div class="row my-auto">
                <a class="nav-item nav-link text-light" href="/products">Shop</a>
                <a class="nav-item nav-link text-light" href="/account/login">Login</a>
                <a class="nav-item nav-link text-light" href="/account/register">Register</a>
            </div>
        </nav>
    }


    <div>
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>
