@model dynamic

<div class="w-25">
    <h3>Your Cart:</h3>
    @foreach (var item in Model.CartItems)
    {
        if (item.Product != null)
        {
            <div>
                <a asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductID">
                    @item.Product.Name
                </a>
                <form>
                    Quantity: 
                    <input type="number" value="@item.Quantity">
                    <button>Update</button>
                </form>                
            </div>
        }
    }
</div>